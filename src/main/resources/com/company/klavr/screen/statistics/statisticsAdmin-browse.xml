<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://statisticsAdminBrowse.caption"
        focusComponent="statisticsesTable" xmlns:chart="http://jmix.io/schema/ui/charts">
    <data readOnly="true">
        <collection id="statisticsesDc"
                    class="com.company.klavr.entity.Statistics">
            <fetchPlan extends="_base">
                <property name="statistics_to_exercise" fetchPlan="_base"/>
                <property name="statistics_to_user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="statisticsesDl">
                <query>
                    <![CDATA[select e from Statistics_ e]]>
                </query>
            </loader>
        </collection>
        <collection id="statisticsesAdminDc" class="com.company.klavr.entity.Statistics">
            <fetchPlan extends="_base"/>
            <loader id="statisticsesAdminDl">
                <query>
                    <![CDATA[select e from Statistics_ e order by e.finishDate]]>
                </query>
            </loader>
        </collection>
        <collection id="exercisesDc" class="com.company.klavr.entity.Exercise">
            <fetchPlan extends="_base"/>
            <loader id="exercisesDl">
                <query>
                    <![CDATA[select e from Exercise e]]>
                </query>
            </loader>
        </collection>
        <collection id="usersDc" class="com.company.klavr.entity.User">
            <fetchPlan extends="_base"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from User e]]>
                </query>
            </loader>
        </collection>
        <keyValueCollection id="avgUser">
            <loader>
                <query>
                    <![CDATA[SELECT avg (e.timer) from Statistics_ e]]>
                </query>
            </loader>
        </keyValueCollection>

    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="statisticsesTable" spacing="true">
        <filter id="filter"
                dataLoader="statisticsesDl">
            <properties include=".*"/>
        </filter>
        <hbox spacing="true">
            <entityComboBox id="exerciseComboBox"
                            description="msg://exerciseComboBox.description"
                            optionsContainer="exercisesDc"/>
            <entityComboBox id="userComboBox"
                            description="msg://userComboBox.description"
                            optionsContainer="usersDc"/>
        </hbox>
        <chart:serialChart dataContainer="statisticsesAdminDc"
                           categoryField="finishDate" id="adminSerialChart">
            <chart:graphs>
                <chart:graph id="g1"
                             bullet="ROUND"
                             bulletBorderAlpha="1"
                             bulletColor="WHITE"
                             bulletSize="5"
                             hideBulletsCount="50"
                             lineThickness="2"
                             title="Red line"
                             useLineColorForBulletBorder="true"
                             valueField="timer"
                             balloonText="&lt;span style='font-size:18px;'&gt;[[value]]&lt;/span&gt;">
                    <chart:balloon adjustBorderColor="false"
                                   color="WHITE"
                                   drop="true"/>
                </chart:graph>
            </chart:graphs>
        </chart:serialChart>
        <groupTable id="statisticsesTable"
                    width="100%"
                    dataContainer="statisticsesDc">
            <actions>
            </actions>
            <columns>
                <column id="finishDate"/>
                <column id="statistics_to_exercise"/>
                <column id="statistics_to_user"/>
                <column id="exerciseLength"/>
                <column id="mistakesCount"/>
                <column id="maxMistakes"/>
                <column id="timer"/>
                <column id="speed"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
