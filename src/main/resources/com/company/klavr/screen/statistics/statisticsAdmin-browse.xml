<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://statisticsAdminBrowse.caption"
        focusComponent="statisticsesTable" xmlns:chart="http://jmix.io/schema/ui/charts">
    <data readOnly="true">
        <collection id="statisticsesDc"
                    class="com.company.klavr.entity.Statistics">
            <fetchPlan extends="_base">
                <property name="statistics_to_exercise" fetchPlan="_base"/>
                <property name="statistics_to_user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="statisticsesDl">
                <query>
                    <![CDATA[select e from Statistics_ e]]>
                </query>
            </loader>
        </collection>
        <!--<instance id="exerciseDc" class="com.company.klavr.entity.Exercise">
            <fetchPlan extends="_base"/>
            <loader id="exerciseDl"/>
        </instance>
        <collection id="exercisesDc" class="com.company.klavr.entity.Exercise">
            <fetchPlan extends="_base"/>
            <loader id="exercisesDl">
                <query>
                    <![CDATA[select e from Exercise e]]>
                </query>
            </loader>
        </collection>
        <instance id="userDc" class="com.company.klavr.entity.User">
            <fetchPlan extends="_base"/>
            <loader id="userDl"/>
        </instance>
        <collection id="usersDc" class="com.company.klavr.entity.User">
            <fetchPlan extends="_base"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from User e]]>
                </query>
            </loader>
        </collection>-->
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="statisticsesTable" spacing="true">
        <filter id="filter"
                dataLoader="statisticsesDl">
            <properties include=".*"/>
        </filter>
        <!--<hbox spacing="true">
            <entityComboBox id="exerciseComboBox" dataContainer="exerciseDc"
                            description="msg://exerciseComboBox.description"/>
            <entityComboBox id="userComboBox" dataContainer="userDc" description="msg://userComboBox.description"/>
        </hbox>-->
        <chart:serialChart/>
        <groupTable id="statisticsesTable"
                    width="100%"
                    dataContainer="statisticsesDc">
            <actions>
            </actions>
            <columns>
                <column id="finishDate"/>
                <column id="statistics_to_exercise"/>
                <column id="statistics_to_user"/>
                <column id="exerciseLength"/>
                <column id="mistakesCount"/>
                <column id="maxMistakes"/>
                <column id="timer"/>
                <column id="speed"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
