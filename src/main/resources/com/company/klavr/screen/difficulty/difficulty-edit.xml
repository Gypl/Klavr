<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://difficultyEdit.caption"
        focusComponent="form">
    <data>
        <instance id="difficultyDc"
                  class="com.company.klavr.entity.Difficulty">
            <fetchPlan extends="_base">
                <property name="difficult_to_zone" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="difficult_to_zoneDc" property="difficult_to_zone"/>
        </instance>
        <collection id="zonesDc" class="com.company.klavr.entity.Zone">
            <fetchPlan extends="_base"/>
            <loader id="zonesDl">
                <query>
                    <![CDATA[select e from Zone_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="difficultyDc">
                <column width="350px">
                    <textField id="nameField" property="name"/>
                    <slider id="mistakesSlider" property="mistakesCount" width="250" max="10.0"/>
                    <slider id="minLengthSlider" property="minLength" width="250" min="50.0"/>
                    <slider id="maxLengthSlider" property="maxLength" width="250" min="100.0" max="200.0"/>
                    <slider id="pressTimeSlider" property="pressTime" width="250" min="1.0" max="4.0"/>
                    <checkBoxGroup id="zoneTableCheckBoxGroup" property="difficult_to_zone" orientation="horizontal"
                                   required="true" requiredMessage="lox"/>
                </column>
            </form>

            <groupBox id="difficult_to_zoneBox" caption="msg://com.company.klavr.entity/Difficulty.difficult_to_zone">
                <table id="difficult_to_zoneTable" dataContainer="difficult_to_zoneDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="symbols"/>
                    </columns>
                    <buttonsPanel>
                        <button action="difficult_to_zoneTable.add"/>
                        <button action="difficult_to_zoneTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
