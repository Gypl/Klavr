<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://exerciseUserBrowse.caption"
        focusComponent="exercisesTable">
    <data readOnly="true">
        <collection id="exercisesDc"
                    class="com.company.klavr.entity.Exercise">
            <fetchPlan extends="_base">
                <property name="exercise_to_difficulty" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="exercisesDl">
                <query>
                    <![CDATA[select e from Exercise e]]>
                </query>
            </loader>
        </collection>
        <collection id="difficultiesDc" class="com.company.klavr.entity.Difficulty">
            <fetchPlan extends="_base"/>
            <loader id="difficultiesDl">
                <query>
                    <![CDATA[select e from Difficulty e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="exercisesTable" spacing="true">
        <filter id="filter"
                dataLoader="exercisesDl" visible="false">
            <properties include=".*"/>
        </filter>
        <entityComboBox id="difficultyComboBox" nullName="msg://entityComboBox.nullName"
                        optionsContainer="difficultiesDc"
                        />
        <groupTable id="exercisesTable"
                    width="100%"
                    dataContainer="exercisesDc">
            <actions>
                <action id="exclude" type="exclude"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="text"/>
                <column id="length"/>
                <column id="exercise_to_difficulty"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="excludeBtn" action="exercisesTable.exclude" visible="false"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
