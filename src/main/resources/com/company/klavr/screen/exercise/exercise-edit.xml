<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://exerciseEdit.caption"
        focusComponent="form">
    <data>
        <instance id="exerciseDc"
                  class="com.company.klavr.entity.Exercise">
            <fetchPlan extends="_base">
                <property name="exercise_to_difficulty" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
        <instance id="difficultyDc" class="com.company.klavr.entity.Difficulty">
            <fetchPlan extends="_base"/>
            <loader id="difficultyDl"/>
        </instance>
        <collection id="difficultiesDc" class="com.company.klavr.entity.Difficulty">
            <fetchPlan extends="_base"/>
            <loader id="difficultiesDl">
                <query>
                    <![CDATA[select e from Difficulty e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="exerciseDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <entityComboBox id="exercise_to_difficultyComboBox" property="exercise_to_difficulty" optionsContainer="difficultiesDc"
                                nullOptionVisible="false"/>
                <textField id="lengthField" property="length" editable="false"/>
            </column>
        </form>

        <hbox spacing="true" width="600">
            <textField id="textField" property="text" required="true" dataContainer="exerciseDc" rowspan="10"
                       height="300px" width="400px"/>
            <vbox spacing="true">
                <button align="TOP_RIGHT"/>
                <button align="TOP_RIGHT"/>
            </vbox>
        </hbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
